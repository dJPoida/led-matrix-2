{
  "name": "led-matrix-2",
  "version": "0.0.1",
  "repository": "https://github.com/dJPoida/led-matrix-2.git",
  "author": "Peter Eldred",
  "license": "MIT",
  "description": "A NodeJS driver for a WS2812 (or similar) LED Matrix on a Raspberry Pi 4",
  "packageManager": "yarn@4.0.1",
  "engines": {
    "node": ">=18.18.2"
  },
  "main": "server.ts",
  "scripts": {
    "start": "cross-env NODE_ENV=production yarn node --unhandled-rejections=strict dist/server/server.js",
    "dev": "cross-env NODE_ENV=development nodemon --exec \"tsx --tsconfig \"./tsconfig.server.dev.json\" \"./src/server/server.ts\"\"",
    "build": "cross-env NODE_ENV=production yarn rimraf \"./dist\" && webpack --config webpack.config.prod.js && tsc -P tsconfig.server.prod.json",
    "build:dev": "cross-env NODE_ENV=development webpack --config webpack.config.dev.js && tsc -P tsconfig.server.dev.json"
  },
  "devDependencies": {
    "@types/css-modules": "^1.0.5",
    "@types/express": "^4.17.21",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^18.18.10",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/webpack-hot-middleware": "^2.25.9",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "boxicons": "^2.1.4",
    "classnames": "^2.3.2",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "express": "^4.18.2",
    "html-webpack-plugin": "^5.5.3",
    "mime-types": "^2.1.35",
    "mini-css-extract-plugin": "^2.7.6",
    "prettier": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-resizable-panels": "^0.0.59",
    "resolve-url-loader": "^5.0.0",
    "rimraf": "^5.0.5",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "source-map-loader": "^4.0.1",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "tsx": "^4.1.4",
    "typescript": "^5.2.2",
    "url-loader": "^4.1.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-middleware": "^6.1.1",
    "webpack-dev-server": "^4.15.1",
    "webpack-hot-middleware": "^2.25.4",
    "webpack-merge": "^5.10.0",
    "winston": "^3.11.0"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.1"
  }
}
